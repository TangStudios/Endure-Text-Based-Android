<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffffff"
    android:gravity="center|left">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event1_enemy_health"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:fontFamily="monospace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/console_health"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:fontFamily="monospace"
            android:id="@+id/enemy_health"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enemy_sword_damage_text"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:fontFamily="monospace"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:fontFamily="monospace"
            android:layout_marginTop="5dp"
            android:id="@+id/enemy_sword_damage"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/event_one_scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/event1_actions">

        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/console_health_label"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:fontFamily="monospace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/console_health"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:fontFamily="monospace"
            android:id="@+id/health"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/console_sword_damage_text"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:fontFamily="monospace"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/console_sword_damage"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:fontFamily="monospace"
            android:layout_marginTop="5dp"
            android:id="@+id/sword_damage"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="Attack"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="onAttack"
                android:fontFamily="monospace"
                android:id="@+id/atk"/>

            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="Defend"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="onDefend"
                android:fontFamily="monospace"
                android:id="@+id/def"/>

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_weight="1"
            android:textSize="18sp"
            android:visibility="invisible"
            android:id="@+id/conButton"
            android:fontFamily="monospace"
            android:onClick="onContinue"/>
    </LinearLayout>

</LinearLayout>
